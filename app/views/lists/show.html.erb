<%= render "layouts/banner"%>
<h1><%= @list.name %></h1>

<h2>All Bookmarks</h2>

<% @list.bookmarks.each do |bookmark| %>
  <p><%= bookmark.movie.title %></p>
  <p><%= bookmark.comment %></p>
<%= link_to 'Remove', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
<% end %>

<button><%=link_to "add bookmark",  new_list_bookmark_path(@list) %></button>
<button><%=link_to "back to list",  root_path %></button>
