<div class="card-container flex">
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="card-category"
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height: 300, width: 300, crop: :fill %>)">
      </div>
    <% end %>
      <h1><%= link_to list.name, list_path(list) %></h1>
    </div>
  <% end %>
</div>
